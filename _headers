# 보안 헤더 설정 (Netlify)

/*
  # XSS 보호
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  
  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Content Security Policy (느슨하게 설정 - 필요에 따라 강화)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://cdn.tailwindcss.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://cdn.tailwindcss.com; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https://brandflow-backend2.onrender.com wss://brandflow-backend2.onrender.com ws://localhost:* http://localhost:*; worker-src 'self' blob:; child-src 'self' blob:;
  
  # Permissions Policy
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()

# 정적 자산 캐시 설정
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# API 프록시 헤더 (만약 필요한 경우)
/api/*
  X-Robots-Tag: noindex